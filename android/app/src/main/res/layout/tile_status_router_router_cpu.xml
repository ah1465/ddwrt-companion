<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tile_status_router_router_cpu"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tile_background_1"
    android:orientation="horizontal">

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginRight="8.0dip"-->
        <!--android:id="@+id/ic_tile_status_router_router_cpu"-->
        <!--android:background="@android:color/transparent"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.74"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4.0dip">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/tile_status_router_router_cpu_title"
                android:text="CPU"
                android:textStyle="bold"
                android:textColor="#000000"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tile_status_router_router_cpu_speed"
                android:textStyle="italic"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Loading Clock..."
                android:textAppearance="?android:textAppearanceSmall"
                android:singleLine="true"
                android:ellipsize="end"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="8.0dip"
            android:layout_marginTop="8.0dip"
            android:background="#ffcccccc" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <!-- Model -->
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPU Model" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:text=" " />
            <TextView
                android:id="@+id/tile_status_router_router_cpu_model"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Loading..."
                android:textStyle="italic"
                android:singleLine="false"
                android:ellipsize="end"/>

            <!-- Cores -->
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPU Cores" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:text=" " />
            <TextView
                android:id="@+id/tile_status_router_router_cpu_cores"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Loading..."
                android:textStyle="italic"
                android:singleLine="false"
                android:ellipsize="end"/>

            <!-- Load Avg -->
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load Average" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:text=" " />
            <TextView
                android:id="@+id/tile_status_router_router_cpu_load_avg"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Loading..."
                android:textStyle="italic"
                android:singleLine="false"
                android:ellipsize="end"/>


            <!-- Temperature-->
            <!--<TextView-->
                <!--android:textStyle="bold"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Temperature" />-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="8.0dip"-->
                <!--android:layout_marginRight="8.0dip"-->
                <!--android:text=":" />-->
            <!--<TextView-->
                <!--android:id="@+id/tile_status_router_router_cpu_lan_ip"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="right" />-->

        </GridLayout>

    </LinearLayout>
</LinearLayout>